<%= render '/public/header' %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <table>
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-4">
      <div class="row">
        <%= image_tag @item.get_image(100, 150) %>
      </div>
    </div>
<%= form_with model: CartItem.new, url: cart_items_path, method: :post do |f| %>
    <div class="col-md-12">
      <table>
        <tr>
          <th><%= @item.name %></th>
        </tr>
        <tr>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>_
          <td>￥<%= @item.price.to_s(:delimited) %>(税込み)</td>
        </tr>
        <tr>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <td>個数選択<%= f.select :amount, *[1..10] %></td>
          <td><%= f.submit 'カートに入れる', class: "btn btn-success" %></td>
        </tr>
      </table>
    </div>
   <% end %>
  </div>
</div>