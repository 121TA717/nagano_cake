<%= render '/public/header' %>


<div class="container">
  <div class="row">
    <div class="col-md-3">
      <table>
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-9">
      <div class="row">
      <h2>商品一覧</h2>
      </div>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-md-3">
            <%= image_tag item.get_image(200, 200) %><br>
            <%= link_to item.name, item_path(item.id) %><br>
            ￥<%= item.price.to_s(:delimited)%><br>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>