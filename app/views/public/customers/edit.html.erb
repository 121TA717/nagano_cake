<%= render '/public/header' %>

<table class="table table-active">
  <tr>
    <td>会員情報編集</td>
  </tr>
</table>

 <%= form_with model: @customer, url: public_customers_path, method: :PATCH do |f| %>

  <div class="field">
    <tr>
    <%= f.label '氏名' %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "on" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "on" %>
    </tr>
  </div>
  <div class="field">
    <tr>
    <%= f.label 'フリガナ' %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "on" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "on" %>
    </tr>
  </div>
  <div class="field">
    <tr>
    <%= f.label '郵便番号' %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "on" %>
    </tr>
  </div>
  </div>
  <div class="field">
    <tr>
    <%= f.label '住所' %>
    <%= f.text_field :address, autofocus: true, autocomplete: "on" %>
    </tr>
  </div>
  <div class="field">
    <tr>
    <%= f.label '電話番号' %>
    <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "on" %>
    </tr>
  </div>
  <div class="field">
    <tr>
    <%= f.label 'メールアドレス' %>
    <%= f.text_field :email, autofocus: true, autocomplete: "on" %>
    </tr>
  </div>
<tr>
  <td><%= f.submit '変更を保存', class: "btn btn-success" %></td>
  <td><%= link_to "退会する", customers_unsubscribe_path, class:"btn btn-danger" %></td>
</tr>
  <% end %>
