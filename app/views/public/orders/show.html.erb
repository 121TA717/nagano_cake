<%= render '/public/header' %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>注文履歴詳細</h2>
    </div>


        <div class="col-md-9">
          <table class="table">
            <th>注文情報</th>
              <tr>
                <th>注文日</th>
                  <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
              </tr>
              <tr>
                <th>配送先</th>
                <td><%= @order.postal_code %><br>
                    <%= @order.address %><br>
                    <%= @order.name %>
                </td>
              </tr>
              <tr>
                <th>支払方法</th>
                <td><%= @order.payment_method %></td><br>
              </tr>
              <tr>
                <th>ステータス</th>
                <td><%= @order.status_i18n %></td><br>
              </tr>
          </table>
        </div>

        <div class="col-md-3">
          <table class="table">
            <tr>
              <th>請求情報</th>
            </tr>
            <tr>
              <th>商品合計</th>
              <td><%= @order.total_payment.to_s(:delimited) %></td>
            </tr>
            <tr>
              <th>配送料</th>
              <td>800</td>
            </tr>
            <tr>
              <th>ご請求金額</th>
              <td><%= @order.total_payment.to_s(:delimited) %></td>
            </tr>
          </table>
        </div>


  </div>
    <div class="col-md-９">
      <h3>注文内容</h3>
      <table class="table">
          <tr>
            <th>商品名</th>
            <th>単価（税込み）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.item.price %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.item.price * order_detail.amount %></td>
            </tr>
          <% end  %>
        </table>
    </div>
    </div>
</div>


