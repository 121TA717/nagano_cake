<%= render '/public/header' %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>注文履歴一覧</h2>
    </div>
    <div class="row">
      <div class="col-md-12">
        <table class="table">
          <thead>
            <tr>
              <th>注文日</th>
              <th>配送先</th>
              <th>注文商品</th>
              <th>支払金額</th>
              <th>ステータス</th>
              <th>注文詳細</th>
            </tr>
          </thead>

         <% @orders.each do |order| %>
         <tr>
         <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
         <td><%= order.address %></td>
         <td>
         <% order.order_details.each do |detail| %>
         <%= detail.item.name %><br>
         <%end%>
         </td>
         <td><%= order.total_payment.to_s(:delimited) %>円</td>
         <td><%= order.status_i18n %></td>
         <td><%= link_to "表示する", order_path(order.id), class:"btn btn-primary" %></td>
         </tr>

         <% end %>
         </table>
      </div>
    </div>
  </div>
</div>