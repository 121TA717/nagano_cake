<%= render '/public/header' %>


<table class="table table-active">
  <tr>
    <td>新規会員登録</td>
  </tr>
</table>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
<%= render "public/shared/error_messages", resource: resource %>
<table>


<tbody>
  <tr>
        <td>名前</td>
        <td>(姓)<td>
        <td><%= f.text_field :last_name, autofocus: true, placeholder:"令和" %></td>
        <td>(名)</td>
        <td><%= f.text_field :first_name, autofocus: true, placeholder:"道子" %></td>
  </tr>

  <tr>
    <td>フリガナ</td>
    <td>(セイ)</td>
    <td><%= f.text_field :last_name_kana, autofocus: true, placeholder:"レイワ" %></td>
    <td>(メイ)</td>
    <td><%= f.text_field :first_name_kana, autofocus: true, placeholder:"ミチコ" %></td>
  </tr>

  <tr>
    <td>メールアドレス</td>
    <td></td>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"sample@example.com" %></td>
  </tr>

  <tr>
    <td>郵便番号(ハイフンなし)</td>
    <td></td>
    <td><%= f.text_field :postal_code,placeholder:"0000000" %></td>
  </tr>

  <tr>
    <td>住所</td>
    <td></td>
    <td><%= f.text_field :address,placeholder:"東京都渋谷区代々木神園町0-0" %></td>
  </tr>

  <tr>
    <td>携帯電話(ハイフンなし)</td>
    <td></td>
    <td><%= f.text_field :telephone_number,placeholder:"0000000000" %></td>
  </tr>

  <tr>
    <td>
      <% if @minimum_password_length %>
      <em>パスワード(<%= @minimum_password_length %>文字以上)</em>
      <% end %>
    </td>
      <td></td>
      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
  </tr>

  <tr>
    <td>パスワード(確認用)</td>
    <td></td>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </tr>
  <tr>
    <td></td>
    <td></td>
    <td><%= f.submit '新規登録', class: "btn btn-success" %></td>
  </tr>
</tbody>
</table>
<% end %>
<P>既に登録済みの方</P>
<td><%= link_to "こちら", new_customer_session_path, class:"btn btn-success" %>からログインして下さい</td>
<%#= render "public/shared/links" %>
