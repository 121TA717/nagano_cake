<%= render '/public/header' %>

<table class="table table-active">
  <tr>
    <td>配送先編集画面</td>
  </tr>
</table>

<%= form_with model: @address, url: address_path(@address), method: :PATCH do |f| %>
  <div class="field">
    <tr>
    <%= f.label '郵便番号(ハイフンなし)' %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "on" %>
    </tr>
  </div>
  <div class="field">
    <tr>
    <%= f.label '住所' %>
    <%= f.text_field :address, autofocus: true, autocomplete: "on" %>
    </tr>
  </div>
  <div class="field">
    <tr>
    <%= f.label '宛名' %>
    <%= f.text_field :name, autofocus: true, autocomplete: "on" %>
    <%= f.submit '変更内容を保存', class: "btn btn-success" %>
    </tr>
  </div>
<% end %>