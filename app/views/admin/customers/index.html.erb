<%= render '/admin/header' %>

<h1>会員一覧</h1>

<table class="table table-hover table-inverse">
<thead>
  <tr>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
    <th colspan="3"></th>
  </tr>
</thead>

<tbody>
  <tr>
  <% @customer.each do |customer| %>
    <td><%= customer.id %></td>
    <td><%= link_to customer.last_name+customer.first_name, admin_customer_path(customer.id) %></td>
    <td><%= customer.email %></td>
  <% if customer.is_deleted == true %>
    <td>退会</td>

  <% else %>
    <td>会員</td>
  <% end %>
  </tr>
  <% end %>

</tbody>
</table>
