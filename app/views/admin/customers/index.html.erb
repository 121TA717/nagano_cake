<%= render '/admin/header' %>

<h1>会員一覧</h1>

<table class="table table-hover table-inverse">
<thead>
  <tr>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
    <th colspan="3"></th>
  </tr>
</thead>

<tbody>
  <tr>
  <% @customer.each do |item| %>
  <td><%= customer.id %></td>
  <td><%= link_to customer.name, admin_customer_path(customer.id) %></td>
  <td><%= customer.email %></td>
  <td><%= item.is_deleted %></td>

  <% end %>
  </tr>
</tbody>
</table>
