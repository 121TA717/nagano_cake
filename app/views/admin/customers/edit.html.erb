<%= render '/admin/header' %>
<%= admin_signed_in? %>

<h1>顧客編集画面</h1>
 <%= form_with model: @customer, url: admin_customer_path(@customer), method: :PATCH do |f| %>
  <div class="field">
    <%= f.label '会員ID' %>
    <%= f.label :customer.id %>
  </div>

  <div class="field">
    <tr>
    <%= f.label '氏名' %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "on" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "on" %>
    </tr>
  </div>
  <div class="field">
    <tr>
    <%= f.label 'フリガナ' %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "on" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "on" %>
    </tr>
  </div>
  <div class="field">
    <tr>
    <%= f.label '郵便番号' %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "on" %>
    </tr>
  </div>
  </div>
  <div class="field">
    <tr>
    <%= f.label '住所' %>
    <%= f.text_field :address, autofocus: true, autocomplete: "on" %>
    </tr>
  </div>
  <div class="field">
    <tr>
    <%= f.label '電話番号' %>
    <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "on" %>
    </tr>
  </div>
  <div class="field">
    <tr>
    <%= f.label 'メールアドレス' %>
    <%= f.text_field :email, autofocus: true, autocomplete: "on" %>
    </tr>
  </div>
  <div class="field">
    <tr>
    <%= f.label '会員ステータス' %>
     <%= f.label '有効' %>
    <%= f.radio_button :is_deleted, true %>
    <%= f.label '無効' %>
    <%= f.radio_button :is_deleted, false %>
    </tr>
  </div>

  <%= f.submit '変更を保存', class: "btn btn-success" %>
  <% end %>
