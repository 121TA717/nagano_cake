<%= render '/admin/header' %>
<%= admin_signed_in? %>

<h1>商品編集</h1>
  <%= form_with model: @item, url: admin_item_path(@item), method: :PATCH do |f| %>
  <div class="field">
    <%= f.label '商品画像' %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="field">
    <%= f.label '商品名' %>
    <%= f.text_field :name, autofocus: true, autocomplete: "on" %>
  </div>

  <div class="field">
    <%= f.label '商品説明' %>
    <%= f.text_area :introduction, autofocus: true, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label 'ジャンル' %>
    <%= f.collection_select(:genre_id, Genre.all, :id, :name) %>
  </div>

  <div class="field">
    <%= f.label '税抜価格' %>
    <%= f.text_field :price, autofocus: true %>円
  </div>

  <div class="field">
    <%= f.label '販売ステータス' %>
    <%= f.label '販売中' %>
    <%= f.radio_button :is_active, true %>
    <%= f.label '販売停止' %>
    <%= f.radio_button :is_active, false %>
  </div>

    <%= f.submit '変更を保存', class: "btn btn-success" %>

<% end %>