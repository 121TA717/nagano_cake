<%= render '/admin/header' %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
     <h1>商品一覧</h1>
     </div>
     <div class="col-md-3">
     <%= link_to new_admin_item_path do %>
     <p><i class="bi bi-plus-circle"></i></p>
     <% end %>
     </div>
     </div>

<table class="table table-hover table-inverse">
<thead>
  <tr>
    <th>商品ID</th>
    <th>商品名</th>
    <th>税抜価格</th>
    <th>ジャンル</th>
    <th>ステータス</th>
  　<th colspan="3"></th>
  </tr>
</thead>


<tbody>
  <tr>
  <% @item.each do |item| %>
  <td><%= item.id %></td>
  <td><%= link_to item.name, admin_item_path(item.id) %></td>
  <td><%= item.price %></td>
  <td><%= item.genre.name %></td>
  <td><%= item.is_active %></td>
  </tr>
  <% end %>

</tbody>
</table>
</div>
