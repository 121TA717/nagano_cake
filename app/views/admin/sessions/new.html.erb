<h2>管理者ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :'メールアドレス' %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'メールアドレス' %>
  </div>

  <div class="field">
    <%= f.label :'パスワード' %>
    <%= f.password_field :password, autocomplete: "パスワード" %>
  </div>


  <div class="actions">
    <%= link_to 'ログイン', admin_path, class: "btn btn_primary" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>
