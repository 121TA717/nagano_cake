<%= render '/admin/header' %>

<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>管理者ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-group">
      <%= f.label :'メールアドレス' %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'メールアドレス',placeholder:"sample@example.com" %>
    </div>

    <div class="form-group">
    <%= f.label :'パスワード' %>
    <%= f.password_field :password, autocomplete: "パスワード" %>
    </div>


    <div class="actions">
    <%= f.submit 'ログイン', class: "btn btn-primary" %>
    </div>
  <% end %>

<%= render "admin/shared/links" %>

</div>
